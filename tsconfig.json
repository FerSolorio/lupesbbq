{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",              // Esta línea es clave
    "paths": {
      "@/*": ["./*"]             // Mapea @/ a la raíz del proyecto
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["app/**/*", "components/**/*"]
}
